 * a menu with four choices including exit and a message if a wrong input is entered
 *
 *set scanner
 *display menu
 *user inputed response 
 *if 1 was entered
 *
 */
import java.util.Scanner;

public class menu {
public static void main(String[] args){
	Scanner scan = new Scanner(System.in);
	System.out.println("Enter the number corrsponding to the menu choice.");
	System.out.println("1. Menu 1");
	System.out.println("2. Menu 2");
	System.out.println("3. Menu 3");
	System.out.println("4. Menu 4");
	int x = scan.nextInt();
	if (x == 1){
		System.out.println("Menu 1");
	}
	if (x == 2){
		System.out.println("Menu 2");
	}
	if (x == 3){
		System.out.println("Menu3");
	}
	if (x == 4){
		System.out.println("Thank you come again");
	}
	while (x>4 || x<1){
	System.out.println("Wrong Choice! Try Again" );
	x = scan.nextInt();
	}
}
}
