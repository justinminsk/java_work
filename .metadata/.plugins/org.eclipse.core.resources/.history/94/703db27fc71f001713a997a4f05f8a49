
public class Assignment_3 {
	public static void main(String[] args) {
		int[][] array = new int[3][3];

		displayMagicSqaure(array);
	}

	public static boolean sumRows(int[][] array) {
		boolean sum = false;
		int sum1 = 0, sum2 = 0, sum3 = 0;
		for (int i = 0; i < 3; i++) {
			sum1 += array[0][i];
		}
		for (int i = 0; i < 3; i++) {
			sum2 += array[1][i];
		}
		for (int i = 0; i < 3; i++) {
			sum3 += array[2][i];
		}
		if (sum1 == sum2 && sum1 == sum3)
			sum = true;

		return sum;
	}

	public static boolean sumColumns(int[][] array) {
		boolean sum = false;
		int sum1 = 0, sum2 = 0, sum3 = 0;
		for (int i = 0; i < 3; i++) {
			sum1 += array[i][0];
		}
		for (int i = 0; i < 3; i++) {
			sum2 += array[i][1];
		}
		for (int i = 0; i < 3; i++) {
			sum3 += array[i][2];
		}
		if (sum1 == sum2 && sum1 == sum3)
			sum = true;

		return sum;
	}

	public static boolean sumDiagonals(int[][] array) {
		boolean sum = false;
		int sum1 = array[0][0] + array[1][1] + array[2][2];
		int sum2 = array[2][0] + array[1][1] + array[0][2];
		if (sum1 == sum2)
			sum = true;
		return sum;
	}

	public static boolean isUnique(int[][] array, int num) {
		boolean unique = true;
		for (int i = 0; i < array.length; i++) {
			for (int j = 0; j < array[0].length; j++) {
				if (num == array[i][j]) {
					unique = false;
				}
			}
		}
		return unique;
	}

	public static void displayMagicSquare(int[][] array) {
		for (int i = 0; i < array.length; i++) {
			for (int j = 0; j < array[0].length; j++) {
				System.out.print(array[i][j] + " ");
			}
			System.out.println(" ");
		}
	}

	public static void fillMatrix(int[][] array) {
		int temp = 0;
		do {
			for (int i = 0; i < array.length; i++) {
				for (int j = 0; j < array[0].length; j++) {
					temp = (int) (Math.random() * (8) + 1);
					while (!(isUnique(array, temp))) {
						temp = (int) (Math.random() * (8) + 1);
					}
					array[i][j] = temp;
				}
			}
		} while (isMagicSquare(int[][] array));
	}

	public static boolean isMagicSquare(int[][] array) {
		boolean fact = false;
		if(sumColumns(int[][] array) && sumRows(int[][] array) && sumDiagonals(int[][] array))
			fact = true;
		return fact;
	}
}
